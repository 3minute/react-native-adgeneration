<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adg_nativead_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1">

            <com.facebook.ads.AdIconView
                android:id="@+id/adg_nativead_view_icon"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:src="@android:color/transparent" />
            <FrameLayout
                android:id="@+id/adg_nativead_view_mediaview_container"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

            </FrameLayout>

            <TextView
                android:id="@+id/adg_nativead_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/adg_nativead_view_icon"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/adg_nativead_view_icon"
                android:layout_toRightOf="@+id/adg_nativead_view_icon"
                android:layout_weight="1"
                android:text="Title"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/adg_nativead_view_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/adg_nativead_view_icon"
                android:layout_alignLeft="@+id/adg_nativead_view_title"
                android:layout_alignStart="@+id/adg_nativead_view_title"
                android:text=" PR "
                android:background="@drawable/text_border"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/adg_nativead_view_sponsored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/adg_nativead_view_icon"
                android:layout_alignRight="@id/adg_nativead_view_ad"
                android:text="sponsored"
                android:textColor="@android:color/darker_gray"
                android:textSize="10dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>